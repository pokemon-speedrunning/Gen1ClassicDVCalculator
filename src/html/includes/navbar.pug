mixin dropdownItem(linkName, linkUrl)
  a(class="dropdown-item" href=linkUrl)= linkName

mixin navItem(linkName, linkUrl)
  li(class="nav-item active")
    a(class="nav-link", href=linkUrl)= linkName

nav(class="navbar navbar-expand-lg navbar-dark bg-dark")
  a(class="navbar-brand" href="index.html") Gen 1 Catch Rate Calculator
  button(class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation")
    span(class="navbar-toggler-icon")
  div(class="collapse navbar-collapse", id="navbarSupportedContent")
    ul(class="navbar-nav mr-auto")
      +navItem("Home", "index.html")