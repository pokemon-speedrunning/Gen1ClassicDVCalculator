extends ../includes/layout
include ../includes/bootstrap_mixins

mixin statRow(label)
  .col-md-2.col-4(data-statType=label.toLowerCase())
    .row
      p.h4.col.text-center=label

mixin dvRow(label)
  .col-md-2.col-4(data-dvType=label.toLowerCase())
    p.h4=label
    p.dvRange

prepend pageStyles
  - var pageTitle = "Gen 1 DVs"

append pageContent
  .container-fluid
    h1 Pokemon Yellow DV Calculator
    p.lead For use with Glitchless Classic Speedruns
    hr
    .form-row
      .col-md-2.form-group
        button.btn.btn-danger(type="button" id="reset") Reset!
      .col-md-4.form-group.form-row
        label.col-md.col-form-label(for="level") Nido's Level
        .input-group.col-md
          .input-group-prepend
            button.btn.btn-primary(type="button" id="decrementLevel") -
          input.form-control(type="number" id="level" style="-webkit-appearance: none; -moz-appearance: textfield;" value=6 min=6 max=23)
          .input-group-append
            button.btn.btn-primary(type="button" id="incrementLevel") +
    hr
    p.h3 Possible DVs
    .row
      +dvRow("HP")
      +dvRow("Attack")
      +dvRow("Defense")
      +dvRow("Speed")
      +dvRow("Special")
    hr
    p.lead Click a Stat to Narrow Possible DVs
    .row.dvButtons
      +statRow("HP")
      +statRow("Attack")
      +statRow("Defense")
      +statRow("Speed")
      +statRow("Special")

append pageScripts
  script(src="js/main.js")